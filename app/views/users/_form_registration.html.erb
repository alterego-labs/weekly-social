<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :login %><br>
    <%= f.text_field :login %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-default">Accept</button>
  </div>
  
<% end %>
