<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">

		<div class="side col-md-3">
		<ul class="nav nav-pills nav-stacked">
				<li class="active"><%= link_to 'My Page', user_path %></li>
				<li><%= link_to 'Edit Profile', edit_user_path(@user) %></li>
				<hr color="#eeeeee">
				<li><%= button_to 'Logout',{ action: "destroy" , controller: "session"}, method: :delete %></li>
			</ul>
		</div>

		<div class="col-md-9">
			<div class="col-md-3">
				<% if @user.avatar_url  %>
		        	<%= image_tag(@user.avatar_url) %>
		        <% else %>
		        	<%= image_tag("avatar.png") %>
		        <% end %>
	        </div>
	        <div class="col-md-7">
	        	<table class="text">
	        	<tr>
		        	<td class="leftcol">
						<b>
						<%= @user.name %>  <%= @user.surname %>
						</b>
						<hr>
					</td>
					<td class="rightcol">
						<!--<b>
								Online
								Offline
						</b>!-->
					</td>
				</tr>
				<tr>
					<td>
						<b>Sex:</b> <%= user_information(@user.sex) %>
					</td>
				</tr>
				<tr>
					<td>
						<b>Country:</b> <%= user_information(@user.country) %>
					</td>
				</tr>
				<tr>
					<td>
						<b>City:</b> <%= user_information(@user.home_city) %>
					</td>
				</tr>
				<tr>
					<td>
						<b>Birthday:</b>
						<% if @user.birthday %>
							<%= @user.birthday %>
						<% else %>
							Ne ukazano
						<% end %>
					</td>
				</tr>
				</table>
			</div>
		</div>
	</div>
</div>