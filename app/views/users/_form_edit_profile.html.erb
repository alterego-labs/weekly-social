<%= form_for(current_user) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :surname %><br>
    <%= f.text_field :surname , class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :avatar_url %><br>
    <%= f.text_field :avatar_url, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country , class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :home_city, class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :sex %></br>
    <%= f.radio_button(:sex, "Man") %>
    <%= label_tag(:sex, "Man") %>
    <%= f.radio_button(:sex, "Woman") %>
    <%= label_tag(:sex, "Woman") %>
  </div>
  <div class="field">
    <%= f.label (:birthday_date) %></br>
   <%= date_select("user","birthday", order: [:day, :month, :year], start_year: (Time.now.year-100)) %>
   
  </div>
  
  <hr>

  <h4>Change password</h4>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <br>
  <div align="center" class="actions">
    <button type="submit" class="btn btn-default">Accept</button>
  </div>
<% end %>
