<%= form_for(@article) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.text_area :main_part, size: "100x30" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-default">Post</button>
  </div>

<% end %>
